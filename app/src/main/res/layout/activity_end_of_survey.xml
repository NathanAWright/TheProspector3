<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EndOfSurvey"
    android:background="#0099cc">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        android:src="@drawable/thankyou"
        android:id="@+id/thankYouImage"
        android:contentDescription="@string/thank_you" />

    <Button
        android:id="@+id/restartButton"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:backgroundTint="#33b5e5"
        android:onClick="restartSurvey"
        android:text="@string/restart_survey"
        android:textSize="18sp"
        android:visibility="invisible"
        tools:ignore="UnusedAttribute" />

</RelativeLayout>